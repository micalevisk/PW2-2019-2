#!/usr/bin/env node
require('../config/bootstrap');

const http = require('http');
const SocketServer = require('socket.io');

const app = require('../app');
const models = require('../app/models');

const log = logger('server');

const isProduction = (app.get('env') === 'production');

/**
 * Get port from environment and store in Express.
 */
const PORT = normalizePort(process.env.PORT || '4567');
app.set('port', PORT);

/**
 * Create HTTP server.
 */
const server = http.createServer(app);

/**
 * Create Socket.io server.
 */
const io = new SocketServer(server);

io.use((socket, next) => {
  const matchId = socket.handshake.headers['x-matchid'];
  const uid = socket.handshake.headers['x-uid'];
  const opuid = socket.handshake.headers['x-opuid'];

  Object.assign(socket, {
    matchId,
    uid,
    opuid,
  });

  return next();
});


const onSendMove = (socket, actionMove) => {
  const { matchId } = socket;
  const { match, position, userIdTurn } = actionMove;

  if (match.id !== matchId) { return; }

  const newPartidaValues = {
    fen: position,
  };

  if (match.isOver) {
    newPartidaValues.winner = (match.inDraw ? -1 : userIdTurn); // NOTE: `-1` == empate
  }

  // TODO: move to a background job (vide https://youtu.be/uonKHztGhko)
  models.Partida.update(newPartidaValues, {
    where: { id: matchId },
  });

  socket.broadcast.emit('game:receive-move', actionMove);
};


io.on('connect', (socket) => {
  const { matchId } = socket;

  if (!matchId) { // AKA "nÃ£o-autenticado"
    return;
  }

  socket.on('game:send-move', onSendMove.bind(null, socket));
  socket.emit('status:ready', matchId);
});


/**
 * Listen on provided port, on all network interfaces.
 */
app.once('ready', () => {
  server.listen(PORT);
  server.on('error', onError);
  server.on('listening', onListening);
});

/**
 * Database health check.
 */
if (isProduction) {
  models.connection
    .authenticate()
    .then(() => app.emit('ready'))
    .catch(onError);
} else {
  models.connection
    .sync()
    .then(() => app.emit('ready'))
    .catch(onError);
}

/**
 * Normalize a port into a number, string, or false.
 * @param {string} val The port to be normalized.
 * @returns {boolean|number} The normalized port number or `false`.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (Number.isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 * @param {Error}
 * @throws {Error}
 */
function onError(err) {
  if (err.syscall !== 'listen') {
    throw err;
  }

  const bind = typeof PORT === 'string'
    ? `Pipe ${PORT}`
    : `Port ${PORT}`;

  // handle specific listen errors with friendly messages
  switch (err.code) {
    case 'EACCES':
      log.error(`${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      log.error(`${bind} is already in use`);
      process.exit(1);
      break;
    default:
      throw err;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  const addr = server.address();
  const bind = (typeof addr === 'string')
    ? `pipe ${addr}`
    : `port ${addr.port}`;
  log(`Listening on ${bind}`);
}
