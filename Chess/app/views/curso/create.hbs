<div class="row">
  <div class="col-8">
    <h1>Adicionar Curso</h1>
  </div>
  <div class="col-4">
    <div class="float-right mt-2">
      <a class="btn btn-secondary" href="/curso"><i class="fas fa-arrow-left"></i>Voltar</a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-8">
    <form action="/curso/create" method="POST">

      <div class="form-group">
        <label for="initials">Sigla</label>
        <input class="form-control" type="text" name="initials" id="initials" placeholder="Informe a sigla do curso" required>
        <small class="form-text text-muted">Em caso de dúvida, procure no <a href="https://ufam.edu.br" rel="noopener" target="_blank">site da UFAM</a></small>
      </div>

      <div class="form-group">
        <label for="name">Nome</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Informe a sigla do curso" required>
      </div>

      <div class="form-group">
        <label for="description">Descrição</label>
        <textarea class="form-control" name="description" id="description" rows="3"></textarea>
      </div>

      <fieldset class="form-group">
        <legend>Área do Curso</legend>
        <div class="form-check">
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="area" id="id_area" value="1" required>
            Exatas (Matemática, Computação Estatística)
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="area" id="id_area" value="2" required>
            Humanas (Letras, História, Psicologia)
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="area" id="id_area" value="3" required>
            Biológicas (Medicina, Biologia, Farmácia)
          </label>
        </div>
      </fieldset>

      <button type="submit" class="btn btn-primary btn-lg">Adicionar Curso</button>
    </form>
  </div>
</div>
