<div class="row">
  <div class="col-8">
    <h1>Adicionar Curso</h1>
  </div>
  <div class="col-4">
    <div class="float-right mt-2">
      <a class="btn btn-primary" href="/curso/create"><i class="fas fa-plus"></i>Adicionar Curso</a>
    </div>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Sigla</th>
      <th scope="col">Nome</th>
      <th scope="col" style="width: 20%; text-align: right">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each cursos}}
    <tr class="table-dark">
      <td>{{initials}}</td>
      <td>{{name}}</td>
      <td style="text-align: right">
        <a href="/curso/read/{{id}}"><i class="fas fa-eye"></i></a>
        <a href="/curso/update/{{id}}"><i class="fas fa-pencil"></i></a>
        <a href="/curso/remove/{{id}}"><i class="fas fa-trash"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
