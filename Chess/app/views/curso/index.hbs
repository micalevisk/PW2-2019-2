<div class="curso__index">

  <div class="row">
    <div class="col-8">
      <h1>Cursos da UFAM</h1>
    </div>
    <div class="col-4">
      <div class="float-right mt-2">
        <a class="btn btn-primary" href="/curso/create"><i class="fas fa-plus"></i>&nbsp;Adicionar</a>
      </div>
    </div>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Sigla</th>
        <th scope="col">Nome</th>
        <th scope="col" style="width: 20%; text-align: right">Opções</th>
      </tr>
    </thead>
    <tbody>
      {{#each cursos}}
      <tr class="table-dark">
        <td>{{initials}}</td>
        <td>{{name}}</td>
        <td class="text-right">
          <a href="/curso/read/{{id}}"><i class="fas fa-eye" aria-hidden="true"></i></a>
          <a href="/curso/update/{{id}}"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>
          <a href="/curso/remove/{{id}}"><i class="fas fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>
